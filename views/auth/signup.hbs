<div class="signup-container">

  <div class="login-page">
    <h2>SIGN UP</h2>

    <form action="/auth/signup" method="POST" class="form">

      <input class="input-field" type="text" name="username" placeholder="Username">

      <input type="password" name="password" class="input-field" placeholder="Password" required="true"
        pattern="(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[^\da-zA-Z]).{8,15}">

      <p>
        Your password should contain at least one uppercase letter, one downcase letter, one number and be at least 8 to
        15
        characters long and special characters.</p>
      <br>

      {{#if message }}
      <div class="error-message">{{ message }}</div>
      {{/if}}

      <br>

      <button class='signup'>Create an account</button>

      <p class="account-message">
        Do you already have an account?</p>
      <a href="/auth/login" class="signup">Log in</a>

    </form>

  </div>

</div>