<div id="form-container">

  <h2>SIGN UP</h2>

  <form action="/auth/signup" method="POST" id="form-container">
    <label for="username">Username</label>
    <input id="username" type="text" name="username" placeholder="Username">

    <br>

    <label for="password">Password</label>
    <input type="password" name="password" id="password" placeholder="Password" required
      pattern="(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[^\da-zA-Z]).{8,15}">
    <p>Your password should contain at least one uppercase letter, one downcase letter, one number and be at least 8 to
      15
      characters long and special characters.</p>

    <br>

    {{#if message }}
    <div class="error-message">{{ message }}</div>
    {{/if}}

    <br>

    <button>Create an account</button>

    <p class="account-message">
      Do you already have an account?</p>
    <a href="/auth/login" class="login">Log in</a>

  </form>

</div>